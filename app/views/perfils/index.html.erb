<p id="notice"><%= notice %></p>

<h1>Perfils</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= perfil.nome %></td>
        <td><%= link_to 'Mostrar', perfil %></td>
        <td><%= link_to 'Editar', edit_perfil_path(perfil) %></td>
        <td><%= link_to 'Apagar', perfil, method: :delete, data: { confirm: 'Tem certeza disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar perfil', new_perfil_path %>
